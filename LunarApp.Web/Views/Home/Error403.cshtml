@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>403 - Forbidden</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/error-pages.css">
</head>
<body class="d-flex align-items-center justify-content-center vh-100">
    <div class="text-center">
        <div class="error-icon">🚫</div>
        <h1 class="display-3 fw-bold error-code">403</h1>
        <p class="lead text-secondary">Access Denied</p>
        <p class="mb-4">You do not have permission to view this page. Please check your credentials or contact support if you believe this is an error.</p>
        <a href="/" class="btn btn-danger btn-lg btn-hover-effect">
            <i class="bi bi-house-door"></i> Take Me Home
        </a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>