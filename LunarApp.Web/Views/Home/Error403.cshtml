@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>403 - Forbidden</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="d-flex align-items-center justify-content-center vh-100">
<div class="text-center">
    <div class="error-icon">🚫</div>
    <h1 class="display-1 fw-bold text-danger">403</h1>
    <p class="lead text-muted">Access Denied</p>
    <p class="mb-4">You don't have permission to access this page. Please check your credentials or contact support.</p>
    <a href="/" class="btn btn-primary btn-lg btn-hover-effect">
        <i class="bi bi-arrow-left-circle"></i> Back to Home
    </a>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@if (ViewData["ReturnUrl"] != null)
{
    <a href="@ViewData["ReturnUrl"]" class="btn btn-primary">Go Back</a>
}