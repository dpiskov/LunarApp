@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Not Found</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/error-pages.css">
</head>
<body class="d-flex align-items-center justify-content-center vh-100">
    <div class="text-center">
        <div class="error-icon">🔍</div>
        <h1 class="display-3 fw-bold error-code">404</h1>
        <p class="lead text-secondary">Oops! We can't seem to find the page you're looking for.</p>
        <p class="mb-4">The page may have been moved or deleted. Please double-check the URL or return to the homepage.</p>
        <a href="/" class="btn btn-danger btn-lg btn-hover-effect">
            <i class="bi bi-house-door"></i> Take Me Home
        </a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>