@model NotebookCreateViewModel

@{
    ViewData["Title"] = "Add a new notebook";
}

<div class="text-center mb-4 mt-2">
    <h2>@ViewData["Title"]</h2>
</div>

<hr />

<div class="row d-flex justify-content-center align-items-center flex-column card-center">
    <div class="col-md-6">
        <div class="transparent-container card">
            <form asp-controller="Notebook" asp-action="Create" method="post" class="text-center">
                <div class="card-body">
                    <label asp-for="Title" class="card-title mb-2">Notebook Name</label>
                    <br />
                    <input asp-for="Title" class="form-control bg-transparent" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="card-footer d-flex align-content-center justify-content-center gap-2 pt-3 pb-3">
                    <button type="submit" class="btn btn-primary px-4 py-2">Create Notebook</button>

                    <a asp-controller="Notebook" asp-action="Index" class="btn btn-outline-warning px-4 py-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>