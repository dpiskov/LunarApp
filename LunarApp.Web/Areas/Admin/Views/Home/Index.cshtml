@{
    ViewData["Title"] = "Welcome to the Admin Dashboard";
}

<div class="d-flex flex-column">
    <div class="text-center mb-4 mt-2">
        <h1 class="display-4 mb-4 text-primary">@ViewData["Title"]</h1>
    </div>

    <div class="container mt-5 card-center">
        <div class="row g-4 container d-flex justify-content-center align-items-center flex-column">
            <div class="col-md-4">
                <div class="card shadow h-100 border-2 bg-dark bg-opacity-75 ">
                    <div class="card-body d-flex flex-column align-items-center text-center">
                        <i class="fas fa-users fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Manage Users</h5>
                        <p class="card-text text-muted">Add, edit, or remove users and assign roles.</p>
                        <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-primary mt-auto w-100">
                            Go to Users
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer d-flex align-content-center justify-content-center gap-2 pt-3 pb-3">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary mb-2">Go Home</a>
        </div>
    </div>
</div>

<style>
    .card-footer {
        margin-top: auto;
    }
</style>